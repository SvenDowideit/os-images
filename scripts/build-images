#!/bin/bash
set -e

BASEDIR=$(cd $(dirname $0)/..; pwd)

DO_PUSH="$1"

cd $(dirname $0)

source ./version
VERSION=${VERSION:?"VERSION not set"}

cd ${BASEDIR}

for i in src/docker/[0-9]*; do
    tag="rancher/os-$(echo ${i} | cut -f2 -d-):${VERSION}"
    echo Building ${tag}
    if [ -x ${i}/.prebuild.sh ]; then
        ${i}/.prebuild.sh;
    fi
    docker build -t ${tag} ${i}
done

if [ "${DO_PUSH}" == "--push" ]; then
    for i in src/docker/[0-9]*; do
        tag="rancher/os-$(echo ${i} | cut -f2 -d-):${VERSION}"
        docker push ${tag} || :
    done
fi
